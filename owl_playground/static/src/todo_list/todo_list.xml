<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_playground.todo_list" owl="1">
        <div>
            <input class="form-control mb-2" t-ref="todoInput" t-on-keyup="addTodo" placeholder="Add a Todo"/>
            <t t-foreach="state.todoList" t-as="todo" t-key="todo.id">
                <Todo todo="todo" toggleDone.bind="toggleDone" removeTodo.bind="removeTodo"/>
            </t>
        </div>
    </t>
</templates>
