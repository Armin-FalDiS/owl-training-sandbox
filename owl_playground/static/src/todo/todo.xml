<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="owl_playground.todo" owl="1">
        <div t-on-click="() => props.toggleDone(props.todo.id)">
            <input type="checkbox" t-att-checked="props.todo.done"/>
            <t t-att-class="{'text-muted': props.todo.done, 'text-decoration-line-through': props.todo.done}">
                <t t-esc="props.todo.id"/>. 
                <t t-esc="props.todo.description"/>
            </t>
        </div>
    </t>
</templates>
